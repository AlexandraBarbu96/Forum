@model Forum.Models.ApplicationUser

@{
    ViewBag.Title = "Sterge Utilizatorul";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <h4>@ViewBag.Title</h4>
        <div>
            <a href="~/">Inapoi la pagina principala</a>
        </div>
        <hr />
        <h3>Sunteti sigur ca vreti sa stergeti utilizatorul @Model.UserName?</h3>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-actions no-color">
            <input type="submit" value="Confirma" class="btn btn-default" />
        </div>
    </div>
}