@model Forum.Models.Commentary

@{
    ViewBag.Title = "Editeaza Comentariu";
}
@using (Html.BeginForm())
{
    @*@Html.HttpMethodOverride(HttpVerbs.Put)*@
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@ViewBag.Title</h4>
        <div>
            <a href="~/">Inapoi la pagina principala</a>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.SubjectId)
        @Html.HiddenFor(m => m.CommentaryId)
        @Html.HiddenFor(m => m.UserId)
        @Html.HiddenFor(m => m.CreateData)
        @Html.HiddenFor(m => m.EditData)

        <div class="form-group">
            @Html.LabelFor(model => model.Reply, "Raspuns", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Reply, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Reply, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:none">
            @Html.TextBoxFor(m => m.IsEdited, new { @Value = true })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editeaza Comentariul" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}